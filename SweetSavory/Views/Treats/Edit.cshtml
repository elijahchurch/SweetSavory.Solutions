@{
    Layout = "_Layout";
}

@model SweetSavory.Models.Treat

<h2>Edit Treat: @Model.Name</h2>
<hr>

@if(!ViewData.ModelState.IsValid)
{
    @Html.ValidationSummary("Please fix the following error(s) and then resubmit the form:")
}
@using (Html.BeginForm())
{
    @Html.HiddenFor(model => model.TreatId)
    @Html.LabelFor(model => model.Name)
    @Html.EditorFor(model => model.Name)
    <br>
    @Html.LabelFor(model => model.Description)
    <br>
    @Html.TextAreaFor(model => model.Description)
    <br>
    @Html.LabelFor(model => model.Price)
    @Html.EditorFor(model => model.Price , new { type = "number", min="1"})
    <input type="submit" value="Update">
}
<hr>

<p>@Html.ActionLink("Back", "Details", new {id = Model.TreatId})</p>