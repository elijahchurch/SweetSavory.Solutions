@{
    Layout = "_Layout";
}

@model SweetSavory.Models.Treat

<h2>Delete Treat: @Model.Name</h2>
<hr>


<h3>If you are sure you want to delete this entry, click "Delete". Otherwise, go back.</h3>
@using (Html.BeginForm())
{
    <input type="submit" value="Delete" />
}
<hr>
<p>@Html.ActionLink("Back", "Details", new { id = Model.TreatId})</p>